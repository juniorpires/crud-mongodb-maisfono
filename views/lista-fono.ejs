<!DOCTYPE html>
<html>
  <head>

    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  <div class="container">
    <div class="row">
      <div class="col-8">
          <h1><%= title %></h1>
          <table class="table table-hover">
              <thead>
                <tr>
                  
                  <th scope="col">Nome</th>
                  <th scope="col">Telefone</th>
                  <th scope="col">CRF</th>
                  <th scope="col">Formação</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Deletar</th>
                </tr>
              </thead>
              <tbody>
              <% docs.forEach(function(fonoaudiologo){ %>
                <tr>      
                  <td><%= fonoaudiologo.nome %></td>
                  <td><%= fonoaudiologo.telefone %></td>
                  <td><%= fonoaudiologo.CRF %></td>
                  <td><%= fonoaudiologo.formacao %></td>
                  <td> <a href="/new-fono/edit/<%= fonoaudiologo._id %>"><button type="button" class="btn btn-info">E</button> </a></td>
                  <td><a href="/new-fono/delete/<%= fonoaudiologo._id %>" 
                    onclick="return confirm('Tem certeza que deseja excluir?');"> <button type="button" class="btn btn-danger"> X </button> </a></td>
                
                </tr>
              <% }) %>
                
              </tbody>
            </table>
          
            <a href="/new-fono"><button type="button" class="btn btn-primary btn-lg btn-block">Cadastrar novo fonoaudiologo</button></a>
            <br>
            <a href="/"><button type="button" class="btn btn-secondary btn-lg btn-block">Voltar para inicio</button></a>
        </div>
      </div>
    </div>    
  </body>
</html>


